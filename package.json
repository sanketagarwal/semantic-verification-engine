{
  "name": "semantic-verification-engine",
  "version": "1.0.0",
  "description": "LLM-powered semantic verification engine for cross-platform prediction market matching. Detects resolution criteria misalignments between Kalshi and Polymarket.",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.mjs",
      "require": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "bin": {
    "verify-markets": "./dist/cli.js"
  },
  "scripts": {
    "dev": "tsx watch src/cli.ts",
    "build": "tsup src/index.ts src/cli.ts --format cjs,esm --dts --clean",
    "start": "node dist/cli.js",
    "cli": "tsx src/cli.ts",
    "verify": "tsx src/cli.ts verify",
    "test": "vitest",
    "lint": "eslint src/",
    "typecheck": "tsc --noEmit"
  },
  "keywords": [
    "prediction-markets",
    "arbitrage",
    "kalshi",
    "polymarket",
    "llm",
    "semantic-analysis",
    "market-verification",
    "trading",
    "ai"
  ],
  "author": "Sanket Agarwal",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/sanketagarwal/semantic-verification-engine.git"
  },
  "dependencies": {
    "ai": "^4.0.0",
    "@ai-sdk/openai": "^1.0.0",
    "zod": "^3.23.0",
    "chalk": "^5.3.0",
    "ora": "^8.0.0",
    "commander": "^12.0.0",
    "dotenv": "^16.4.0"
  },
  "devDependencies": {
    "@types/node": "^22.0.0",
    "typescript": "^5.6.0",
    "tsx": "^4.19.0",
    "tsup": "^8.0.0",
    "vitest": "^2.0.0",
    "eslint": "^9.0.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
